#!/bin/sh

export PATH="$PATH:$HOME/.cargo/bin"

check_cargo() {
  if [ ! "$(command -v cargo)" ]; then
    echo "----------------------- [RUST NOT FOUND]---------------------------"
    echo "The 'cargo' command was not found on the PATH. Please install rustc"
    echo "from: https://www.rust-lang.org/tools/install"
    echo "-------------------------------------------------------------------"
    echo ""
    exit 1
  fi
}

check_cargo

exit 0
